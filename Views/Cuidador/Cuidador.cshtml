@model PetCare.Models.ViewModels.CuidadorDashboardViewModel

@{
    ViewData["Title"] = "Perfil Cuidador";
}

<div class="container mt-4">
    <div class="row">
        <!-- Columna izquierda (info perfil) -->
        <div class="col-md-3">
            @await Html.PartialAsync("_PerfilInfo", Model)
        </div>

        <!-- Columna central (contenido principal) -->
        <div class="col-md-9">
            <!-- Solicitudes pendientes -->
            @await Html.PartialAsync("_SolicitudesPendientes", Model)

            <!-- Solicitudes activas -->
            @await Html.PartialAsync("_SolicitudesActivas", Model)

            <!-- Historial de servicios -->
            @await Html.PartialAsync("_HistorialServicios", Model)
        </div>
    </div>
</div>

<!-- Modal para chat -->
@await Html.PartialAsync("_ChatModal")

@section Styles {
    @await Html.PartialAsync("_StylesPartial")
}
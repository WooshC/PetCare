@model PetCare.Models.ViewModels.CuidadorDashboardViewModel

@{
    ViewData["Title"] = "Perfil Cuidador";
}

<div class="container mt-4">
    <div class="d-flex justify-content-end mb-2">
        <form asp-controller="Login" asp-action="Logout" method="post">
            <button type="submit" class="btn btn-outline-danger btn-sm">
                <i class="bi bi-box-arrow-right"></i> Cerrar sesión
            </button>
        </form>
    </div>

    <div class="row">
        <!-- Columna izquierda (info perfil) -->
        <div class="col-md-3">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png"
                         class="rounded-circle mb-3" width="150" alt="Foto perfil">
                    <h4>@Model.Cuidador.Usuario.NombreCompleto</h4>
                    <p class="text-muted">Cuidador profesional</p>

                    <div class="mb-3">
                        @{
                            var promedio = Model.Cuidador.CalificacionPromedio;
                            var tieneCalificaciones = Model.Cuidador.Calificaciones.Any();
                        }

                        <div class="star-rating">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="bi @(i <= promedio ? "bi-star-fill" : "bi-star") text-warning"></i>
                            }
                            <span>(@(tieneCalificaciones ? promedio.ToString("0.0") : "0.0")/5.0)</span>
                        </div>
                        <small class="text-muted">
                            @(tieneCalificaciones ? $"{Model.Cuidador.Calificaciones.Count} calificaciones" : "Sin calificaciones")
                        </small>
                    </div>

                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-controller="Cuidador" class="btn btn-outline-primary">Editar perfil</a>
                    </div>

                    <hr>

                    <div class="text-start">
                        <p><strong>Servicios:</strong></p>
                        <ul>
                            <li>Paseos</li>
                            <li>Guardería</li>
                            <li>Visitas a domicilio</li>
                        </ul>

                        <p><strong>Tarifa por hora:</strong></p>
                        <p>@(Model.Cuidador.TarifaPorHora?.ToString("C") ?? "No especificada")</p>

                        <p><strong>Horario de atención:</strong></p>
                        <p>@(Model.Cuidador.HorarioAtencion ?? "No especificado")</p>
                    </div>
                </div>
            </div>
        </div>
                <!-- Columna central (contenido principal) -->
                <div class="col-md-9">
                    <!-- Solicitudes pendientes -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <i class="bi bi-bell-fill"></i> Solicitudes pendientes
                        </div>
                        <div class="card-body">
                            @if (!Model.SolicitudesPendientes.Any())
                            {
                                <div class="alert alert-info">
                                    No tienes solicitudes pendientes en este momento.
                                </div>
                            }
                            else
                            {
                                @foreach (var solicitud in Model.SolicitudesPendientes)
                                {
                                    <div class="alert alert-info">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong>@solicitud.Cliente.Usuario.NombreCompleto</strong> te solicitó para @solicitud.TipoServicio.ToLower()
                                                <p><strong>Pago:</strong> $@((solicitud.DuracionHoras * Model.Cuidador.TarifaPorHora.GetValueOrDefault()).ToString("N0"))</p>
                                            </div>
                                            <div>
                                                <button class="btn btn-sm btn-primary"
                                                        type="button"
                                                        data-bs-toggle="collapse"
                                                        data-bs-target="#detalleSolicitud@solicitud.SolicitudID">
                                                    Ver Detalle
                                                </button>
                                            </div>
                                        </div>

                                        <!-- Detalle de la solicitud (acordeón) -->
                                        <div class="collapse mt-3" id="detalleSolicitud@solicitud.SolicitudID">
                                            <div class="card card-body">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <p><strong>Tipo de servicio:</strong> @solicitud.TipoServicio</p>
                                                        <p><strong>Duración:</strong> @solicitud.DuracionHoras horas</p>
                                                        <p><strong>Fecha:</strong> @solicitud.FechaHoraInicio.ToString("dd MMMM yyyy")</p>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <p><strong>Hora:</strong> @solicitud.FechaHoraInicio.ToString("h:mm tt")</p>
                                                        <p><strong>Ubicación:</strong> @solicitud.Ubicacion</p>
                                                        <p><strong>Pago:</strong> $@((solicitud.DuracionHoras * Model.Cuidador.TarifaPorHora.GetValueOrDefault()).ToString("N0"))</p>
                                                    </div>
                                                </div>
                                                <div class="mt-3">
                                                    <h5>Descripción:</h5>
                                                    <div class="alert alert-light">
                                                        <p>@solicitud.Descripcion</p>
                                                    </div>
                                                </div>
                                                <div class="d-flex justify-content-between mt-2">
                                                    <form asp-action="RechazarSolicitud" asp-route-id="@solicitud.SolicitudID" method="post">
                                                        <button type="submit" class="btn btn-danger">
                                                            <i class="bi bi-x-circle"></i> Rechazar
                                                        </button>
                                                    </form>
                                                    <form asp-action="AceptarSolicitud" asp-route-id="@solicitud.SolicitudID" method="post">
                                                        <button type="submit" class="btn btn-success">
                                                            <i class="bi bi-check-circle"></i> Aceptar
                                                        </button>
                                                    </form>
                                                    <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#chatModal">
                                                        <i class="bi bi-chat-left-text"></i> Chat
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>


            <!-- Solicitudes activas (Aceptadas/En Progreso) -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-dark">
                    <i class="bi bi-hourglass-split"></i> Servicios Activos
                </div>
                <div class="card-body">
                    @if (!Model.SolicitudesActivas.Any())
                    {
                        <div class="alert alert-info">
                            No tienes servicios activos en este momento.
                        </div>
                    }
                    else
                    {
                        @foreach (var solicitud in Model.SolicitudesActivas)
                        {
                            <div class="alert @(solicitud.Estado == "En Progreso" ? "alert-success" : "alert-warning")">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@solicitud.Cliente.Usuario.NombreCompleto</strong> - @solicitud.TipoServicio
                                        <p>
                                            <strong>Estado:</strong>
                                            <span class="badge">
                                                @solicitud.Estado
                                            </span>
                                        </p>
                                        <p><strong>Horario:</strong> @solicitud.FechaHoraInicio.ToString("dd MMM yyyy HH:mm")</p>
                                    </div>
                                    <div>
                                        <button class="btn btn-sm btn-primary"
                                                type="button"
                                                data-bs-toggle="collapse"
                                                data-bs-target="#detalleActivo@solicitud.SolicitudID">
                                            Ver Detalle
                                        </button>
                                    </div>
                                </div>

                                <!-- Detalle de la solicitud activa -->
                                <div class="collapse mt-3" id="detalleActivo@solicitud.SolicitudID">
                                    <div class="card card-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <p><strong>Tipo de servicio:</strong> @solicitud.TipoServicio</p>
                                                <p><strong>Duración:</strong> @solicitud.DuracionHoras horas</p>
                                                <p><strong>Fecha:</strong> @solicitud.FechaHoraInicio.ToString("dd MMMM yyyy")</p>
                                            </div>
                                            <div class="col-md-6">
                                                <p><strong>Hora:</strong> @solicitud.FechaHoraInicio.ToString("HH:mm")</p>
                                                <p><strong>Ubicación:</strong> @solicitud.Ubicacion</p>
                                                <p><strong>Pago:</strong> $@((solicitud.DuracionHoras * Model.Cuidador.TarifaPorHora.GetValueOrDefault()).ToString("N0"))</p>
                                            </div>
                                        </div>
                                        <div class="mt-3">
                                            <h5>Descripción:</h5>
                                            <div class="alert alert-light">
                                                <p>@solicitud.Descripcion</p>
                                            </div>
                                        </div>
                                        @if (solicitud.Estado == "En Progreso")
                                        {
                                            <div class="alert alert-info">
                                                <i class="bi bi-clock"></i> Servicio en curso
                                                @if (solicitud.FechaHoraInicio.AddHours(solicitud.DuracionHoras) < DateTime.Now)
                                                {
                                                    <span class="text-danger"> - Tiempo excedido</span>
                                                }
                                            </div>
                                        }
                                        <div class="d-flex justify-content-between mt-2">
                                            <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#chatModal">
                                                <i class="bi bi-chat-left-text"></i> Chat
                                            </button>
                                            @if (solicitud.Estado == "En Progreso")
                                            {
                                                <button class="btn btn-success" disabled>
                                                    <i class="bi bi-check-circle"></i> En Progreso
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-secondary" disabled>
                                                    <i class="bi bi-hourglass"></i> Aceptada
                                                </button>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>


                    <!-- Historial de servicios -->
                    <div class="card shadow-sm">
                        <div class="card-header bg-success text-white">
                            <i class="bi bi-clock-history"></i> Historial de servicios
                        </div>
                        <div class="card-body">
                            <div class="list-group">
                                @if (!Model.HistorialServicios.Any())
                                {
                                    <div class="alert alert-info">
                                        No tienes servicios en tu historial aún.
                                    </div>
                                }
                                else
                                {
                                    @foreach (var servicio in Model.HistorialServicios)
                                    {
                                        <div class="list-group-item list-group-item-action">
                                            <div class="d-flex w-100 justify-content-between">
                                                <h5 class="mb-1">@servicio.TipoServicio para @servicio.Cliente.Usuario.NombreCompleto</h5>
                                                <span class="badge @(servicio.Estado == "Finalizada" ? "bg-success" : "bg-danger")">
                                                    @servicio.Estado
                                                </span>
                                            </div>
                                            <p class="mb-1">Cliente: @servicio.Cliente.Usuario.NombreCompleto</p>
                                            <small class="text-muted">
                                                @servicio.FechaHoraInicio.ToString("dd MMMM yyyy") -
                                                @servicio.DuracionHoras @(servicio.DuracionHoras > 1 ? "horas" : "hora") -
                                                $@((servicio.DuracionHoras * Model.Cuidador.TarifaPorHora.GetValueOrDefault()).ToString("N0"))
                                            </small>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>




<!-- Modal para chat (se mantiene igual) -->
<div class="modal fade" id="chatModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chat con <span id="chatUserName">Cliente</span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="height: 400px; overflow-y: auto;">
                <!-- Mensajes del chat -->
                <div class="chat-message received mb-2">
                    <div class="message-content bg-light p-2 rounded">
                        <small class="text-muted">Cliente - 10:30 AM</small>
                        <p>Hola, ¿estarías disponible para cuidar a mi mascota?</p>
                    </div>
                </div>
                <div class="chat-message sent mb-2">
                    <div class="message-content bg-primary text-white p-2 rounded">
                        <small class="text-white-50">Tú - 10:32 AM</small>
                        <p>¡Claro! ¿Qué tipo de servicio necesitas?</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Escribe un mensaje...">
                    <button class="btn btn-primary" type="button">Enviar</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .chat-message.sent {
            text-align: right;
            margin-left: 20%;
        }

        .chat-message.received {
            text-align: left;
            margin-right: 20%;
        }

        .message-content {
            display: inline-block;
            max-width: 80%;
        }

        .badge {
            font-size: 0.9em;
        }
    </style>
}

    @section Scripts {
        <script>
            const socket = new WebSocket("ws://" + window.location.host + "/ws");

            socket.onmessage = function (event) {
                const msg = event.data;
                const msgBox = document.createElement("div");
                msgBox.classList.add("chat-message", "received", "mb-2");
                msgBox.innerHTML = `
                    <div class="message-content bg-light p-2 rounded">
                        <small class="text-muted">Otro usuario - ahora</small>
                        <p>${msg}</p>
                    </div>`;
                document.querySelector("#chatModal .modal-body").appendChild(msgBox);
            };

            document.querySelector("#chatModal .btn.btn-primary").addEventListener("click", () => {
                const input = document.querySelector("#chatModal input[type='text']");
                const message = input.value.trim();

                if (message === "") return;

                socket.send(message);

                const msgBox = document.createElement("div");
                msgBox.classList.add("chat-message", "sent", "mb-2");
                msgBox.innerHTML = `
                    <div class="message-content bg-primary text-white p-2 rounded">
                        <small class="text-white-50">Tú - ahora</small>
                        <p>${message}</p>
                    </div>`;
                document.querySelector("#chatModal .modal-body").appendChild(msgBox);

                input.value = "";
            });
        </script>
    }

@model PetCare.Models.ViewModels.ClienteDashboardViewModel
@{
    ViewData["Title"] = "Perfil Cliente";
}

<div class="container mt-4">
    <div class="row">
        <!-- Columna izquierda (info perfil) -->
        <div class="col-md-3">
            @await Html.PartialAsync("_PerfilInfoCliente", Model)
        </div>

        <!-- Columna central (contenido principal) -->
        <div class="col-md-9">
            <!-- Aquí irán las demás secciones cuando las implementemos -->
            <div class="alert alert-info">
                Bienvenido a tu dashboard. Pronto podrás ver aquí tus solicitudes y cuidadores favoritos.
            </div>

            <h3>Cuidadores Disponibles</h3>
            <div class="row">
                @foreach (var cuidador in Model.CuidadoresDisponibles.Where(c => c.Disponible))
                {
                    <div class="col-md-4 mb-4">
                        <div class="card border-primary">
                            <div class="card-body">
                                <h5 class="card-title">@cuidador.Usuario?.NombreCompleto</h5>
                                <p class="card-text">
                                    <strong>Ciudad:</strong> @cuidador.Ciudad<br>
                                    <strong>Calificación:</strong> @(cuidador.CalificacionPromedio.ToString("0.0"))<br>
                                    <strong>Tarifa:</strong> @(cuidador.TarifaPorHora?.ToString("C") ?? "No especificada")<br>
                                    <span class="badge bg-success">Disponible</span>
                                </p>
                                <div class="d-grid gap-2">
                                    <a href="@Url.Action("PerfilCuidador", "Cliente", new { id = cuidador.CuidadorID })"
                                       class="btn btn-outline-primary">Ver Perfil</a>
                                    <a href="javascript:void(0);"
                                       class="btn btn-primary btn-solicitar-servicio"
                                       data-cuidador-id="@cuidador.CuidadorID"
                                       data-nombre-cuidador="@cuidador.Usuario?.NombreCompleto">Solicitar Servicio</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="solicitudModal" tabindex="-1" aria-labelledby="solicitudModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Solicitar Servicio</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body" id="modal-content">
                <!-- Contenido dinámico cargado vía AJAX -->
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('.btn-solicitar-servicio').click(function () {
                var cuidadorId = $(this).data('cuidador-id');
                var url = '/Cliente/SolicitarServicio/' + cuidadorId;

                $.get(url, function (data) {
                    $('#modal-content').html(data);
                    var modal = new bootstrap.Modal(document.getElementById('solicitudModal'));
                    modal.show();
                });
            });
        });
    </script>
}


@section Styles {
    @await Html.PartialAsync("_StylesPartial")
}